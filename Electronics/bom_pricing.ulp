void DatabaseImportDigikeyCSV(void) {
  int	i, j;
  int	NumberOfHeaders;
  string FileName = dlgFileOpen("Choose database file", DatabaseFile, "Database files (*.tsv *.csv);;All files (*)");

  if (!FileName) return;					// If no file was opened then return

  fileerror();						// Reset error status
  string data;
  string new_data[];
  string parsed_data[];
  string import_headers[];
  int NumImported=0;
  int raw_lines=0;
  if (fileread(data, FileName) > 0) {
        raw_lines=strsplit(new_data, data, '\n');
  }
  if (fileerror()) exit (EXIT_FAILURE);				// Exit if file error

  // parse CSV file
  for ( i=0; i<raw_lines; i++) {

        string input=new_data[i];
        string parsed_line[];
        int end = 0;
        int field=0;
	while (strlen(input)>0 && end>=0) {
		end=strchr(input, ',');
	        int next_quote=strchr(input, '"');
        	if (next_quote>=0 && next_quote<end) {
	            next_quote=strchr(input, '"', next_quote+1);
	            end=strchr(input, ',', next_quote+1);
        	}
		if (end>=0) {
			parsed_line[field]=strstrip(strstrip(strsub(input, 0, end), '\t'), '\"');
		} else {
			parsed_line[field]=input;
		}
			
		input=strsub(input, end+1);
		field++;
	}
        
        if (field>1) {
	  	parsed_data[NumImported]= strjoin( parsed_line, '\t');
        	NumImported++;
	}
  }
  int NumImportHeaders=strsplit(import_headers, parsed_data[0]+"\tN/A", '\t');

  
  string distributors[]={"Digikey", "Mouser"};
  string currencies[]={"USD", "EUR", "CHF", "AUD"};
  int currency_select=1;
  dlgDialog("Database import") {
     dlgListView("", parsed_data, Selected) EditDatabase();
     dlgHBoxLayout {
		dlgLabel(Headers[1]);
		if (!header_select[1]) header_select[1]=0;
		dlgComboBox(distributors, header_select[1]);
		
		dlgLabel("Currency");
		dlgComboBox(currencies, currency_select);

		dlgStretch(1);
     }
     for  (i=2; Headers[i]; i++ ) {
	dlgHBoxLayout {
		dlgLabel(Headers[i]);
		if (!header_select[i]) header_select[i]=NumImportHeaders-1;
		dlgComboBox(import_headers, header_select[i]);
		dlgStretch(1);
	}
     }
     dlgHBoxLayout {
     	dlgPushButton("Import") {
		// check for records in database for each import
		string imported_distributor=distributors[header_select[1]];
		int ordercode_column=header_select[2];

		for (i=0; parsed_data[i]; i++) {
			int match=DatabaseFindRecord(2, GetField(parsed_data[i], ordercode_column));
			if (match>=0 && GetField(Database[match], 1)!=distributors[header_select[1]]) match=-1;
			if (match>=0) { // update all other columns
				Database[match]=UpdateRecord(Database[match], GetFieldIndex(Database[0], "CURRENCY"), currencies[currency_select]);

				for  (int j=2; Headers[j]; j++ ) {
					int input_column=header_select[j];
					string new_value=GetField(parsed_data[i], input_column);
					if (new_value!="") {
						Database[match]=UpdateRecord(Database[match], j, new_value);
					}
				}				
			} 
		}
		DatabaseModified = 1;
		DatabaseCleanup();

		GenerateList();
		dlgAccept();
        }
     	dlgPushButton("Cancel") {
		dlgReject();
        }

     }
  };

  
}


