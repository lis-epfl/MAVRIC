string StripWhiteSpace(string s)
{
    while (s && isspace(s[0]))
    s = strsub(s, 1);
    while (s && isspace(s[strlen(s) - 1]))
    s = strsub(s, 0, strlen(s) - 1);
    return s;
}


string strstrip(string input, char c) {
	string stripped[];
	strsplit(stripped, input, c);
	return strjoin(stripped, ' ');
}

string strreplace(string input, char remove, char insert) {
	string stripped[];
	strsplit(stripped, input, remove);
	return strjoin(stripped, insert);
}

string floattostr(real in) {
	string result;
	sprintf(result, "%f", in);
	return result;
}

string inttostr(int in) {
	string result;
	sprintf(result, "%d", in);
	return result;
}



string ReformatNumber(string input) {
	return strreplace(StripWhiteSpace(strstrip(input, '\"')), ',', '.');
}

int GetFieldIndex(string fields,  string value) {
	string split[];
	strsplit(split, fields, '\t');
	for (int i=0; split[i]; i++) {
		if (split[i]==value) return i;
	}
	return -1;
}
string GetField(string record, int column) {
	string split[];
	strsplit(split, record, '\t');
	if (split[column]) {
		return split[column];
	} else {
		return "";
	}
}



int DatabaseFindColumn( string value) {
	for (int i=0; Headers[i]; i++) {
		if (Headers[i]==value) return i;
	}
	return -1;
}

// returns the index of the record that contains the given value in the given column
int DatabaseFindRecord(int column, string value) {
	int width;
	if (column<0) return -1;
	for (int i=1; Database[i]; i++) {
		string split[];
		width=strsplit(split, Database[i], '\t');
		if (width<0) {return -1;}
		if (split[column] && split[column]==value) {return i;}
	}
	return -1;
}



string UpdateRecord(string record, int column, string value) {
	string split[];
	strsplit(split, record, '\t');
	split[column]=value;
	return strjoin(split, '\t');
}

void DatabaseAddRecord(string record) {
	int tail=0;
	for (tail=0; Database[tail]; tail++);
	Database[tail]=record;
}

void CollectPartData(void)
{
    NumParts = 0;
    
    
    schematic(SCH) {
        SCH.parts(P) {
            if (P.device.package) {
                PartName[NumParts] = P.name;
                PartValue[NumParts] = P.value;
                PartPrefix[NumParts] = P.device.prefix;
                PartDevice[NumParts] = P.device.name;
                PartPackage[NumParts] = P.device.package.name;
                PartHeadline[NumParts] = P.device.headline;
                PartDescription[NumParts] = P.device.description;
                PartValueOn[NumParts] = P.device.value == "On";
		PartPlace[NumParts] = P.attribute["PLACE_PART"];
		PartDistributor[NumParts] = P.attribute["DISTRIBUTOR"];
		PartOrderCode[NumParts] = P.attribute["ORDER_CODE"];
		PartUnitPrice[NumParts] = P.attribute["UNIT_PRICE"];
		PartUnitPricing[NumParts] = "";
		string prices[];
		for (int i=0; price_headers[i]; i++) {
			 prices[i]=P.attribute[price_headers[i]]; 
		} 
		PartUnitPricing[NumParts]=strjoin(prices, '\t');
                NumParts++;
            }
        }
    }
}

string DatabaseHeader(void)
{
    string s;

    if (Database[0]) {
        string a[];
        int n = strsplit(a, Database[0], DatabaseSeparator);
        int i;
        for (i = 1; i < n; i++) {
            s += "\t" + a[i];
            DatabaseFields[i - 1] = a[i];
        }
        DatabaseFields[i - 1] = "";
    }
    return s;
}

string DatabaseKey(int i)
{
    string key = PartValue[i];
    if (PartValueOn[i])
    key = PartDevice[i] + ValueSeparator + key;
    return key;
}

string DatabaseLookup(string key, int f)
{
    DatabaseHeader();
    return lookup(Database, key, DatabaseFields[f], DatabaseSeparator);
}

void GeneratePartList(void)
{
    int NumLines = 0;

    //XXX column sequence?
    Lines[NumLines++] = "Part\tValue\tDevice\tPackage\tManufacturer\tPart#\tDescription\tPlace" + DatabaseHeader();
    for (int i = 0; i < NumParts; i++) {
        Lines[NumLines] = PartName[i] + "\t" + PartValue[i] + "\t" + PartDevice[i] + "\t" + PartPackage[i] + "\t" + PartManf[i] + "\t" + PartManfNumber[i] + "\t" + PartHeadline[i] + "\t" + PartPlace[i];
        if (Database[0]) {
            string key = DatabaseKey(i);
            for (int f = 0; DatabaseFields[f]; f++)
            Lines[NumLines] += "\t" + DatabaseLookup(key, f);
            Lines[NumLines] += "\t" + key; // hidden field!
        }
        NumLines++;
    }
    Lines[NumLines] = "";
    disableHeader = 0;

}

void GenerateValueList(void)
{
    int NumLines = 0;
    int Index[];

    //XXX column sequence?
    Lines[NumLines++] = "Qty\tValue\tDevice\tParts" + DatabaseHeader();
    sort(NumParts, Index, PartValue, PartDevice, PartName);
    for (int n1 = 0, n2 = 0; ++n2 <= NumParts; ) {
        int i1 = Index[n1];
        if (n2 < NumParts) {
            int i2 = Index[n2];
            //XXX value on/off?
            if (PartValue[i1] == PartValue[i2] && PartDevice[i1] == PartDevice[i2])//XXX  && lname[i1] == lname[i2])
            continue;
        }
        string Quantity;
        sprintf(Quantity, "%d", (n2 - n1) * BuildQty);
        Lines[NumLines] = Quantity + "\t" + PartValue[i1] + "\t" + PartDevice[i1] + "\t";
        for (;;) {
            Lines[NumLines] += PartName[i1];
            if (++n1 < n2) {
                i1 = Index[n1];
                Lines[NumLines] += ", ";
            }
            else
            break;
        }
        if (Database[0]) {
            string key = DatabaseKey(i1);
            for (int f = 0; DatabaseFields[f]; f++)
            Lines[NumLines] += "\t" + DatabaseLookup(key, f);
            Lines[NumLines] += "\t" + key; // hidden field!
        }
        NumLines++;
    }
    Lines[NumLines] = "";
    disableHeader = 0;
}

void GenerateManfList(void)
{
    int NumLines = 0;
    int Index[];
    real total_price=0.0;

    //XXX column sequence?
    Lines[NumLines++] = "Qty\tParts\tDevice\tValue\tDescription\tPlace(y/n)\tDistributor\tOrdercode\tUnit Price\tPricebreak\tTotal Price";
    sort(NumParts, Index, PartPrefix, PartValue, PartDevice, PartHeadline);
    for (int n1 = 0, n2 = 0; ++n2 <= NumParts; ) {
        int i1 = Index[n1];
        if (n2 < NumParts) {
            int i2 = Index[n2];
            //XXX value on/off?
            if (PartValue[i1] == PartValue[i2] && PartDevice[i1] == PartDevice[i2])//XXX  && lname[i1] == lname[i2])
            continue;
        }
	int total_quantity=(n2 - n1) * BuildQty;
	if (strupr(PartPlace[i1])=="NO" || strupr(PartPlace[i1])=="N") {
		total_quantity=0;
	}

	real pricing[];
	for (int i=0; price_breaks[i]; i++) {
		pricing[i]=strtod(GetField(PartUnitPricing[i1], i));
	}
	int best_pricebreak=0;
	real lowest_total_price=total_quantity * pricing[0];
	
	for (i=0; price_breaks[i]; i++) {
		if (pricing[i]>0) { // only accept valid prices
			if (total_quantity>=price_breaks[i] && 
			    total_quantity * pricing[i] < lowest_total_price) {
				best_pricebreak=i;
				lowest_total_price=total_quantity * pricing[best_pricebreak];
			}
			if (total_quantity<price_breaks[i] && 
			    price_breaks[i] * pricing[i] < lowest_total_price) {
				best_pricebreak=i;
				total_quantity=price_breaks[i];
				lowest_total_price=total_quantity * pricing[best_pricebreak];
			}
		}
	}

	string best_unit_price_str="";
	if (pricing[best_pricebreak]>0.0) best_unit_price_str=floattostr(pricing[best_pricebreak]);

	Lines[NumLines]=  inttostr(total_quantity) + "\t"; 

	for (;;) {
            Lines[NumLines] += PartName[i1];
            if (++n1 < n2) {
                i1 = Index[n1];
                Lines[NumLines] += ", ";
            }
            else
            break;
        }
        Lines[NumLines] +=  "\t"+PartDevice[i1]
        + "\t" + PartValue[i1]
        + "\t" + PartHeadline[i1]
	+ "\t" + PartPlace[i1]
        + "\t" + PartDistributor[i1]
        + "\t" + PartOrderCode[i1]
        + "\t" + best_unit_price_str
	+ "\t" + inttostr(price_breaks[best_pricebreak])
        + "\t" + floattostr(lowest_total_price);
        n1 = n2;
        i1 = Index[n2-1];
        total_price+=lowest_total_price;
        NumLines++;
    }
    Lines[NumLines] = "\t\t\t\t\t\t\tAvg. per board:\t"+floattostr(total_price/BuildQty)+"\tOverall total:\t"+floattostr(total_price);
    NumLines++;
    Lines[NumLines] = "";
    disableHeader = 0;
}


