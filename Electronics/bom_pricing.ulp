void DatabaseCleanup(void) {
	if (!Database[0]) return;
	for (int i=1; Database[i]; i++) {
		string dline[];
		strsplit(dline, Database[i], DatabaseSeparator);
		for (int f=0; price_breaks[f]; f++) {
			dline[f+DbPricingOffset]=ReformatNumber(dline[f+DbPricingOffset]);
		}
		Database[i]=strjoin(dline, DatabaseSeparator);
	}

}

void NewDatabase(void)
{
    DatabaseFile = "";
    Database[0] = "";
    GenerateList();
    //dlgRedisplay();
    int i=0;
    Headers[i++] = "Key";
    Headers[i++] = "DISTRIBUTOR";
    Headers[i++] = "ORDER_CODE";
    DbPricingOffset=i;
    for (i=DbPricingOffset; price_headers[i-DbPricingOffset]; i++) Headers[i] = price_headers[i-DbPricingOffset];

    Headers[i++] = "IN_STOCK";

    NumHeaders = i;
    string sep;
    int db_index=0;
    for (i = 0; Headers[i]; i++) {
        Database[db_index] += sep + Headers[i];
        sep = "\t";
    }
    db_index++;
    DatabaseSeparator = '\t';
    DatabaseModified = 0;
}

void UpdateFromSchematic(void) {
    int Index[];
    sort(NumParts, Index, PartValue, PartDevice, PartName);
    for (int n1 = 0, n2 = 0; ++n2 <= NumParts; ) {
        int i1 = Index[n1];
        if (n2 < NumParts) {
            int i2 = Index[n2];
            //XXX value on/off?
            if (PartValue[i1] == PartValue[i2] && PartDevice[i1] == PartDevice[i2])//XXX  && lname[i1] == lname[i2])
            continue;
        }
        n1=n2;
        string key = DatabaseKey(i1);
	string pricing[];
	strsplit(pricing, PartUnitPricing[i1], '\t');

	
        string record = key + DatabaseSeparator +
			PartDistributor[i1] + DatabaseSeparator +
			PartOrderCode[i1] + DatabaseSeparator +
			pricing[0] + DatabaseSeparator +  // UNIT_PRICE
			pricing[1] + DatabaseSeparator +  // UNIT_PRICE_10X
			pricing[2] + DatabaseSeparator +  // UNIT_PRICE_25X
			pricing[3] + DatabaseSeparator +  // UNIT_PRICE_50X
			pricing[4] + DatabaseSeparator +  // UNIT_PRICE_100X 
			pricing[5] + DatabaseSeparator +  // UNIT_PRICE_500X
			pricing[6] + DatabaseSeparator +  // UNIT_PRICE_1000X
			pricing[7] + DatabaseSeparator +  // Currency
			"" ; //IN_STOCK

	int db_index=DatabaseFindRecord(0, key);
	if (db_index>=0) {
		Database[db_index]=record;
	} else {
		DatabaseAddRecord(record);
	}	    
        
    }
    DatabaseCleanup();
    DatabaseModified = 0;
    GenerateList();
}

