real Number[];

int ExtractNumbers(string Line)
{
    int NumNumbers = 0;
    string NumberText = "";
    for(int i=0; i<strlen(Line); i++)
    {
        if(isdigit(Line[i]) || (Line[i]=='.') || (Line[i]==','))
        {
            if(Line[i] != ',')
            NumberText += Line[i];
        }
        else if(strlen(NumberText)!=0)
        {
            Number[NumNumbers++] = strtod(NumberText);
            NumberText = "";
        }
    }
    return NumNumbers;
}



