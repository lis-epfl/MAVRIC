void AddAttributesToSchematic(void) {
        int cnt = 0;
	int n;
	string Attribute[]={"DISTRIBUTOR", "ORDER_CODE", "PLACE_PART"};
	string AttValue[]={"", "", "YES"};
	int      setAtt[]={1,   1  , 1};

        string cmd = "";
	string s;
        schematic(SCH) {
            SCH.parts(P) {
                // make sure it has a package and name
                if (P.device.package && P.name) {
                   
                   for (n = 0; Attribute[n]; n ++) setAtt[n] = 1;  // preset flags
                   P.attributes(A) { // iterate through all attributes to check if they are already there
                     for (n = 0; Attribute[n]; n++) {
                       if (A.name == Attribute[n]) {  // if attribute exists, don't do anything
                          setAtt[n] = 0;
                       }
                     }
                   }
                   for (n = 0; Attribute[n]; n++) {
                     if (setAtt[n]==1) {
                       sprintf(s, "ATTRIBUTE %s %s '%s';\n", P.name, Attribute[n], AttValue[n]);
                       cmd+=s;
                       s="";
			++cnt;
                     }
                   }
                    //dlgMessageBox(strCmd);
    
                   
                }
                
            }
        }
        
        if (dlgMessageBox("Add DISTRIBUTOR/ORDER_CODE/PLACE_PART attributes for "+inttostr(cnt)+" parts?", "+Yes", "-Cancel")==0) {
		// apply command and close
		exit(cmd);
	}

}

